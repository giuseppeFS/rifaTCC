<div class="col-md-12">
	<div class="row">
		<h1 class="page-title text-center">Campanhas</h1>
	</div>
	<div class="row" id="main_admin">
		<div class="col-md-1"></div>
		<div class="col-md-10">
			<div class="input-group data-table-search">
				<input class="form-control" type="text" placeholder="Busca" aria-label="Search">
				<div class="input-group-btn">
					<button id="btnSearch" class="btn btn-default" type="button"><i class="material-icons">search</i></button>
				</div>
			</div>
			<table id="userDataTable" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
				<thead>
					<tr>
						<th class="th-sm">
							Titulo
						</th>
						<th class="th-sm">
							Categoria
						</th>
						<th class="th-sm">
							Criador
						</th>
						<th class="th-sm">
							Valor Unidade
						</th>
						<th class="th-sm">
							Total Vendido
						</th>
						<th class="th-sm">
							Data Criação
						</th>
						<th class="th-sm">
							Data Finalização				
						</th>
						<th class="th-sm">

						</th>
						<th class="th-sm">

						</th>
					</tr>
				</thead>
				<tbody>
					<% @raffles.each do |raffle| %>
					<tr>
						<td><%= raffle.title %></td>
						<td><%= raffle.category.nil? ? "" : raffle.category.name %></td>
						<td><%= raffle.institution.corporate_name  %></td>
						<td>R$ <%= raffle.unit_value %></td>
						<td><%= raffle.tickets_sold %></td>
						<td><%= raffle.created_at.strftime('%m/%d/%Y') %></td>
						<td><%= raffle.draw_date.strftime('%m/%d/%Y') %></td>
						<td><%= link_to '<i class="material-icons">visibility</i>'.html_safe, admin_raffle_path(raffle), :class => 'btn' %></td>
						<td><%= link_to '<i class="material-icons">delete</i>'.html_safe, admin_raffle_path(raffle),  method: :delete, data: {confirm: "Tem certeza que deseja excluir a rifa?"}, :class => 'btn' %></td>
					</tr>
					<% end %> 	
				</tbody>
			</table>
			<div align="center">
				<%= will_paginate %>
			</div>
		</div>
	</div>
</div>