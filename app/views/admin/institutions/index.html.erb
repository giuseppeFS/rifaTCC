<div class="col-md-12">
	<div class="row">
		<h1 class="page-title text-center">Instituições</h1>
	</div>
	<div class="row" id="main_admin">
		<div class="col-md-1"></div>
		<div class="col-md-10">
			<%= link_to 'Novo', new_admin_institution_path, :class => 'btn btn-action' %>
			<div class="input-group data-table-search">
				<input class="form-control" type="text" placeholder="Busca" aria-label="Search">
				<div class="input-group-btn">
					<button id="btnSearch" class="btn btn-default" type="button"><i class="material-icons">search</i></button>
				</div>
			</div>
			<table id="institutionDataTable" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
				<thead>
					<tr>
						<th class="th-sm">
							Razão Social
						</th>
						<th class="th-sm">
							CNPJ
						</th>
						<th class="th-sm">
							Telefone
						</th>
						<th class="th-sm">
							Endereço
						</th>
						<th class="th-sm">
							Cidade/UF
						</th>
						<th class="th-sm">
							Email
						</th>
						<th class="th-sm">
						</th>
						<th class="th-sm">
						</th>
					</tr>
				</thead>
				<tbody>
					<% @institutions.each do |institution| %>
					<tr>
						<td><%= institution.social_reason %></td>
						<td><%= CNPJ.new(institution.cnpj).formatted %></td>
						<td><%= number_to_phone(institution.ddd_phone + institution.phone_number, area_code: true, pattern: /(\d{2})(\d{4})(\d{4})$/)  %></td>
						<td><%= institution.address %></td>
						<td><%= institution.number %></td>
						<td><%= institution.email %></td>
						<td><%= link_to '<i class="material-icons">edit</i>'.html_safe, edit_admin_institution_path(institution), :class => 'btn' %></td>
						<td><%= link_to '<i class="material-icons">delete</i>'.html_safe, admin_institution_path(institution),  method: :delete, data: {confirm: "Tem certeza que deseja excluir a instituicao?"}, :class => 'btn' %></td>
					</tr>
					<% end %> 	
				</tbody>
			</table>
		</div>
	</div>
</div>